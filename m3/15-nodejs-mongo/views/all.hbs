{{#extends "base"}}
  {{#block "content"}}
    <h1>Pokemon Record</h1>
    <a href="add" class="btn btn-primary">Add new Pokemon</a>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        {{#each pokemonRecords}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.type}}</td>
            <td>
              <a href="#" class="btn btn-primary btn-sm">Edit</a>
              <a href="#" class="btn btn-danger btn-sm">Delete</a>
              <a href="/pokemon/{{../pokemonRecord._id}}/add-note" class="btn btn-secondary btn-sm">Details</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/block}}
{{/extends}}