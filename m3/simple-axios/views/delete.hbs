{{#extends "base"}}
  {{#block "content"}}
    <div class="container">
      <h2>Delete movie?</h2>
      <form method="POST">
        <div class="alert alert-warning" role="alert">
          <div class="mb-3">Are you sure?</div>
          <div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  {{/block}}
{{/extends}}